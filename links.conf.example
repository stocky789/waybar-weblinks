# ============================================================================
# ADVANCED FEATURES
# ============================================================================

# Optional: Categories for organizing shortcuts
# Set LINK_USE_CATEGORIES="true" to enable category view
LINK_USE_CATEGORIES="false"

# If categories are enabled, define them here
LINK_CATEGORIES=(
    "Work"
    "Personal"
    "Development"
)

# Map shortcuts to categories (by label keywords)
